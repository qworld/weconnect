{
    "appenders": {
        "stdout": { "type": "stdout" },
        "console": { "type": "console" },
        "file": { 
            "type": "file", 
            "filename": "../logs/app.log",
            
            "backups": 5,
            "keepFileExt": "true"
        },
        "dateFile": {
            "type": "dateFile",
            "filename": "../logs/app.log",
            "pattern": ".yyyy-MM-dd-hh",
            "layout": { "type": "colored" },
            "alwaysIncludePattern": "true",
            "daysToKeep": "15",
            "keepFileExt": "true"
        },
        "dateFile_error": {
            "type": "dateFile",
            "filename": "../logs/app_errors.log",
            "pattern": ".yyyy-MM-dd-hh",
            "layout": { "type": "colored" },
            "alwaysIncludePattern": "true",
            "daysToKeep": "15",
            "keepFileExt": "false"
        }
    },
    "categories": {
        "default": { 
            "appenders": [ "stdout", "dateFile" ], 
            "level": "ALL" 
        },
        "all": {
            "appenders": [ "stdout", "dateFile" ], 
            "level": "ALL" 
        },
        "error": {
            "appenders": [ "stdout", "dateFile_error" ], 
            "level": "DEBUG" 
        }
    }
}